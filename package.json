{
  "name": "@dkuida/logger-wrapper",
  "version": "1.4.21",
  "description": "commodity wrapper ",
  "main": "src/logger.js",
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "test": "jest --coverage --forceExit --detectOpenHandles",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "clean": "rimraf dist/*",
    "compile": "npm run clean && npm run tsc",
    "tsc": "tsc",
    "ts:watch": "tsc --watch",
    "preversion": "npm run lint && npm run tsc && npm run test && npm run test:integ",
    "postversion": "git push && git push --follow-tags"
  },
  "keywords": [
    "logger"
  ],
  "author": "Dan Kuida",
  "bugs": {
    "url": "https://github.com/dkuida/logger-wrapper"
  },
  "repository": {
    "url": "https://github.com/dkuida/logger-wrapper"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/dkuida/logger-wrapper#readme",
  "dependencies": {
    "winston": "^3.2.1",
    "winston-logstash-transport": "^2.0.0",
    "winston-logzio": "^5.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^8.10.48",
    "@types/jest": "^24.0.12",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "tslint-eslint-rules": "^5.4.0",
    "@typescript-eslint/parser": "^1.7.0",
    "jest-cli": "^24.7.1"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./test",
    "roots": [
      "../test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec).(ts|js)$",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "setupFiles": [],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
