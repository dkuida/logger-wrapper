{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./dist/compiled",
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "es2018",
      "es2017",
      "esnext",
      "es6",

      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true

  },
  "include": [
    "src/**/*.ts",
    "example/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "__mocks__/**/*",
    "**/__mocks__/*"
  ]
}
